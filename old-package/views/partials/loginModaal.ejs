<style>
  .sign-btn{
      padding: 8px 16px;
      font-size: 12px;
      border-radius: 5px;
      background-color: #44150F;
      color:#fff;
      transition: 0.2s ease-in-out;
    }

    .input-field{
      padding: 1vh;
    }

    .modal .close-btn{
      z-index: 2;
      right: 0;
      top: -2vh;
      cursor: pointer;
      border: none;
      outline: none;
      background-color: transparent;
      font-size: 5vh !important;
      position: absolute;
    }

    .sign-btn:hover{
      border: 1px solid #44150F;
      background-color: #fff;
      color: #44150F;
    }
    
